<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.timerapp.ui.TimerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_margin"
            android:text="@string/setting_preset"
            app:layout_constraintStart_toStartOf="@+id/numberPickerMin"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/numberPickerMin"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintEnd_toStartOf="@+id/numberPickerSec"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/min_unit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setting_title"
            app:temporalNotificationTime="@{viewModel.temporalNotificationTime}"
            app:temporalPresetTime="@{viewModel.temporalPresetTime}"
            app:timePlace="@{1}" />

        <TextView
            android:id="@+id/min_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/setting_margin"
            android:text="@string/min"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/numberPickerMin"
            app:layout_constraintTop_toBottomOf="@+id/numberPickerMin" />

        <NumberPicker
            android:id="@+id/numberPickerSec"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/numberPickerMin"
            app:layout_constraintTop_toBottomOf="@+id/setting_title"
            app:temporalNotificationTime="@{viewModel.temporalNotificationTime}"
            app:temporalPresetTime="@{viewModel.temporalPresetTime}"
            app:timePlace="@{2}" />

        <TextView
            android:id="@+id/sec_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/setting_margin"
            android:text="@string/sec"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/numberPickerSec"
            app:layout_constraintTop_toBottomOf="@+id/numberPickerSec" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>