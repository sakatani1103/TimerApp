<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/timerListFragment">

    <fragment
        android:id="@+id/timerListFragment"
        android:name="com.example.timerapp.ui.timerlist.TimerListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_timer_list">
        <action
            android:id="@+id/action_timerListFragment_to_presetTimerListFragment"
            app:destination="@id/presetTimerListFragment" />
        <action
            android:id="@+id/action_timerListFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
        <action
            android:id="@+id/action_timerListFragment_to_deleteTimerListFragment"
            app:destination="@id/deleteTimerListFragment" />
    </fragment>
    <fragment
        android:id="@+id/presetTimerListFragment"
        android:name="com.example.timerapp.ui.presetTimerList.PresetTimerListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_preset_timer_list">
        <action
            android:id="@+id/action_presetTimerListFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
        <action
            android:id="@+id/action_presetTimerListFragment_to_setTimerFragment"
            app:destination="@id/setTimerFragment" />
        <action
            android:id="@+id/action_presetTimerListFragment_to_deletePresetTimerListFragment"
            app:destination="@id/deletePresetTimerListFragment" />
        <argument
            android:name="timerName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.timerapp.ui.timer.TimerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_timer">
        <argument
            android:name="timerName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/setTimerFragment"
        android:name="com.example.timerapp.ui.setTimer.SetTimerFragment"
        android:label="@string/app_name">
        <argument
            android:name="presetTimerId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="timerName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/deletePresetTimerListFragment"
        android:name="com.example.timerapp.ui.deletePresetTimerList.DeletePresetTimerListFragment"
        android:label="@string/app_name">
        <argument
            android:name="timerName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/deleteTimerListFragment"
        android:name="com.example.timerapp.ui.deleteTimerList.DeleteTimerListFragment"
        android:label="@string/app_name"/>
</navigation>